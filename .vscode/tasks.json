{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-I",
                "D:/Code film/Programming Design Major Assignment/.include",
                "D:/Code film/Programming Design Major Assignment/.execute/*",
                "-std=c++23",
                "-o",
                "D:/Code film/Programming Design Major Assignment/.code_exe/${fileBasenameNoExtension}.exe",
                //生成exe文件
                //GBK编码
                "-fexec-charset=GBK"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}